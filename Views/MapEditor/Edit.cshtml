<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map Editor</title>
    <link rel="stylesheet" href="~/css/canvasStyles.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <div id="canvas-container">
        <canvas id="canvas-editor"></canvas>
    </div>
    <div id="info-panel">
        Cursor: (0, 0)<br>
        Zoom: 1.0x
    </div>
    <div id="poly-panel" style="display: none;">
        <h3>Properties</h3>
        <div>
            <label for="triangle-type">Type:</label>
            <select id="triangle-type"></select>
        </div>
        <div>
            <label for="triangle-color">Color:</label>
            <input type="color" id="triangle-color" value="#64c8ff">
        </div>

        <div id="texture-container" style="display: ;">
            <div class="search-container">
                <input type="text" id="texture-search" placeholder="Search textures...">
            </div>
            <div id="texture-list" class="texture-grid">
                <!-- Textures will be loaded here -->
            </div>
            <div id="texture-controls" style="display: block;">
                <h4>Texture Controls</h4>
                <div class="control-group">
                    <label for="texture-position-x">Position X:</label>
                    <input type="range" id="texture-position-x" min="-1" max="1" step="0.01" value="0">
                    <span id="texture-position-x-value">0.00</span>
                </div>
                <div class="control-group">
                    <label for="texture-position-y">Position Y:</label>
                    <input type="range" id="texture-position-y" min="-1" max="1" step="0.01" value="0">
                    <span id="texture-position-y-value">0.00</span>
                </div>
                <div class="control-group">
                    <label for="texture-rotation">Rotation:</label>
                    <input type="range" id="texture-rotation" min="0" max="360" step="1" value="0">
                    <span id="texture-rotation-value">0°</span>
                </div>
                <div class="control-group">
                    <label for="texture-scale">Scale:</label>
                    <input type="range" id="texture-scale" min="0.1" max="3" step="0.1" value="1">
                    <span id="texture-scale-value">1.0</span>
                </div>
                <button id="reset-texture">Reset</button>
                <button id="remove-texture">Remove</button>
            </div>
        </div>
        <div>
            <label>Vertices:</label>
            <div id="vertex-coordinates"></div>
        </div>
    </div>

    <div class="controls">
        <button id="controls-btn" title="Shows all options"><span class="bi-gear-fill"></span>Settings</button>
        <button id="clear-btn" title="Clear the grid"><span class="bi-trash"></span> Clear</button>
        <button id="undo-btn" title="Undo last action"><span class="bi-arrow-counterclockwise"></span> Undo</button>
        <button id="spawnpoint-btn" title="Add spawn point"><span class="bi-person-fill"></span> Spawn</button>
        <button id="blue-flag-btn" title="Add blue flag"><span class="bi-flag-fill" style="color: #0d6efd;"></span> Blue</button>
        <button id="red-flag-btn" title="Add red flag"><span class="bi-flag-fill" style="color: #dc3545;"></span> Red</button>
        <button id="save-btn" title="Save current map"><span class="bi-save"></span> Save</button>
        <button id="help-btn" title="Show help information"><span class="bi-question-circle"></span> Help</button>
    </div>

    <script src="~/js/MapEditor/Edit/setupCanvas.js" defer></script>
    <script src="~/js/MapEditor/Edit/texture-manager.js" defer></script>

</body>
</html>